{
  "name": "Periodic software click of HTML button",
  "description": "Periodic search of HTML button for its software click in the selected browser tabs according to certain rules and optional delay",
  "version": "2.2",
  "author": "lexxai",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting", "alarms","tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}